<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.logs.AddLogWindowController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox>
        <Label text="Title: " GridPane.columnIndex="1" />
        <TextField fx:id="logTourItem" promptText="You cannot change the associated tour" GridPane.columnIndex="1" />
        <TextField fx:id="creationTime" prefHeight="79.0" prefWidth="971.0" promptText="You cannot change the creation time" />
        <TextField fx:id="report" prefHeight="79.0" prefWidth="971.0" promptText="Write the report here" />
        <TextField fx:id="distance" prefHeight="79.0" prefWidth="971.0" promptText="Write the distance here" />
        <TextField fx:id="totalTime" prefHeight="79.0" prefWidth="971.0" promptText="Write the total time here" />
        <TextField fx:id="rating" prefHeight="79.0" prefWidth="971.0" promptText="Write the rating here" />

        <TextField fx:id="vehicleType" prefHeight="79.0" prefWidth="971.0" promptText="Write the vehicle type here" />
        <TextField fx:id="averageSpeed" prefHeight="79.0" prefWidth="971.0" promptText="Write the average speed here" />
        <TextField fx:id="horsepower" prefHeight="79.0" prefWidth="971.0" promptText="Write the horsepower here" />
        <TextField fx:id="joule" prefHeight="79.0" prefWidth="971.0" promptText="Write the joule value here" />
        <TextField fx:id="description" prefHeight="79.0" prefWidth="971.0" promptText="Write the description here" />

        <Button fx:id="submitLog" onAction="#addLog">Add this log</Button>

    </VBox>

</AnchorPane>
